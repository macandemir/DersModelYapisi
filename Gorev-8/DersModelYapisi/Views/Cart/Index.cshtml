@model List<CartProductViewModel>
@{
	decimal toplam = 0;
	decimal kdv = 0;


	foreach (var item in Model)
	{
		toplam += item.Price;
	}

	kdv = (toplam * 18) / 100;
	var kdvToplam = kdv + toplam;
}

<table class="table">
	<thead>
		<tr>
			<th scope="col">Id</th>
			<th scope="col">Name</th>
			<th scope="col">Quantity</th>
			<th scope="col">Price</th>
		</tr>
	</thead>
	<tbody>

		@foreach (var item in Model)
		{
			<tr>
				<th scope="row">@item.Id </th>
				<td>@item.Product.Name  </td>
				<td>@item.Quantity</td>
				<td>₺@item.Price</td>
			</tr>
		}

		<tr>
			<th scope="row" colspan="3">Toplam = </th>
			<td>₺@toplam</td>
		</tr>
		<tr>
			<th scope="row" colspan="3">KDV(%18) = </th>
			<td>₺@kdv</td>
		</tr>
		<tr>
			<th scope="row" colspan="3">KDV Dahil Genel Toplam = </th>
			<td>₺@kdvToplam</td>
		</tr>

	</tbody>
</table>